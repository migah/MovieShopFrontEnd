@model MovieShopCustomer.Models.CustomerMovieView

@{
    ViewBag.Title = "Checkout";
}
<div class="col-md-12">
    <h2>Logged in as @Model.Customer.FirstName @Model.Customer.LastName</h2>

</div>

<div class="container">
    <div class="row">
        <div class="col-xs-8" style="margin-left: 20%; margin-right: 20%">
            
            
            
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="panel-body">

                    <hr>
                    <div class="row">
                        <div class="col-xs-2">
                            <img class="img-responsive" src="@Model.Movie.ImageUrl">
                        </div>
                        <div class="col-xs-4">
                            <h4 class="product-name"><strong>@Model.Movie.Title</strong></h4><h4><small>@Model.Movie.Genre.Name</small></h4>
                        </div>
                        <div class="col-xs-6">
                            <div class="col-xs-6 text-right">
                                <h6><strong>@Model.Movie.Price <span class="text-muted">x</span></strong></h6>
                            </div>
                            <div class="col-xs-4">
                                <input type="text" class="form-control input-sm" value="1">
                            </div>
                            <div class="col-xs-2">
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="text-center">

                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">Total <strong>@Model.Movie.Price kr.</strong></h4>
                        </div>
                        <div class="col-xs-3">

                            @using (Html.BeginForm("confirm", "Checkout"))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="movieId" value="@Model.Movie.MovieId">
                                <input type="hidden" name="customerId" value="@Model.Customer.CustomerId">


                                <br/>
                                <input class="btn btn-success btn-block" type="submit" name="login" value="Checkout">
                                <br>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="col-md-12">
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>