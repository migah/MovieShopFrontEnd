@model MovieShopCustomer.Models.CustomerMovieOrderModel

@{
    ViewBag.Title = "Thanks for your order " + @Model.Customer.FirstName;
}

<div class="container">
    <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>@Model.Customer.FirstName @Model.Customer.LastName</strong>
                        <br>
                        @Model.Customer.Address.Street @Model.Customer.Address.Number
                        <br>
                        @Model.Customer.Address.Country @Model.Customer.Address.ZipCode
                        <br>
                        @Model.Customer.Email
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>Date: @Model.Order.Date</em>
                    </p>
                    <p>
                        <em>Receipt #: @Model.Order.OrderId</em>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1>Receipt</h1>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>#</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-md-9"><em>@Model.Movie.Title</em></td>
                            <td class="col-md-1" style="text-align: center"> 1 </td>
                            <td class="col-md-1 text-center">@Model.Movie.Price</td>
                            <td class="col-md-1 text-center">@Model.Movie.Price</td>
                        </tr>
                        
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right">
                                <p>
                                    <strong>Subtotal: </strong>
                                </p>
                            </td>
                            <td class="text-center">
                                <p>
                                    <strong>@Model.Movie.Price</strong>
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right"><h4><strong>Total: </strong></h4></td>
                            <td class="text-center text-danger"><h4><strong>@Model.Movie.Price</strong></h4></td>
                        </tr>
                    </tbody>
                </table>
                    <a type="button" class="btn btn-success btn-lg btn-block" href="javascript:alert('Please be sure to set your printer to Landscape.');window.print();">PRINT</a>
                    
            </div>
        </div>
    </div>
